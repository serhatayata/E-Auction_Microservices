
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<AuctionViewModel>

<br />
<h1>Auction Index</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Active Auction List</h3>
            </div>
            <div class="card-body">
                <table id="example1" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Quantity</td>
                            <td>@item.StartedAt.ToShortDateString()</td>
                            <td>@item.FinishedAt.ToShortDateString()</td>
                            <td>
                                @if (item.Status == 1)
                                {
                                    <a asp-route-id="@item.Id" class="btn btn-danger">Closed</a>
                                }
                                else
                                {
                                    <a asp-controller="Auction" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                                }
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
